<h1>Edit Task</h1>

<form method="post" action="/tasks/<%= @task.id %>/change">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <div class="form-group">
    <label for="title">Title</label>
    <input type="title" name="title" class="form-control" id="title" aria-describedby="emailHelp" placeholder="Title" value="<%= @task.title %>" required>
  </div>
  <div class="form-group">
    <label for="detils">Details</label>
    <textarea class="form-control" name="details" id="detils" rows="3" required><%= @task.details %></textarea>
  </div>
  <div class="form-group form-check">
    <input type="checkbox" name="done" class="form-check-input" id="done" <%= on?(@task) %>>
    <label class="form-check-label" for="done">Completed</label>
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>
