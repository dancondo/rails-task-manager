<h1>New Task</h1>

<form method="post" action="/tasks/create">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <div class="form-group">
    <label for="title">Title</label>
    <input type="title" name="title" class="form-control" id="title" aria-describedby="emailHelp" placeholder="Title" required>
  </div>
  <div class="form-group">
    <label for="detils">Details</label>
    <textarea class="form-control" name="details" id="detils" rows="3" placeholder = "Details" required></textarea>
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>
