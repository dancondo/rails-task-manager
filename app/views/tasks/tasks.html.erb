<h1>My Tasks</h1>
  <ul>
    <% @tasks.each do |t| %>
      <li>
        <a href=<%= "/tasks/#{t.id}" %>
        <% if t.completed %>
            <i class='far fa-check-square'></i>
          <% else %>
            <i class='far fa-square'></i>
        <% end %>
        <%= t.title %></a><%= link_to "<i class='delete-btn fas fa-trash'></i>".html_safe, "/tasks/#{t.id}",
      method: :delete,
      data: { confirm: "Are you sure?" } %></li>
    <% end %>
  </ul>
<a href="/tasks/new"><i class="fas fa-plus"></i>Add new task</a>
